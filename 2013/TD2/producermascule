package tematd2;

/**
 *
 * @author Popescu Eduard 1221F
 */
import java.io.IOException;
import java.util.ArrayList;
import java.util.concurrent.BlockingQueue;
import java.util.logging.Level;
import java.util.logging.Logger;
public class ProducerMascule implements Runnable {
    private BlockingQueue<String> sharedQueue;
    private ArrayList<String> listPersonnes;
    public static boolean suspended = true;

  public ProducerMascule(BlockingQueue sharedQueue,
			ArrayList<String> listPersonnes) {
        this.sharedQueue = sharedQueue;
        this.listPersonnes = listPersonnes;
}
public void run(){
synchronized (this){
while (suspended)
try {
wait(1000);
} catch (InterruptedException e) {
e.printStackTrace();
	}
}
for(int i=0; i<listPersonnes.size(); i++){
if (listPersonnes.get(i).substring(0, 2).equals("Mascule."))
try {
System.out.println("Produced: " + listPersonnes.get(i));
sharedQueue.put(listPersonnes.get(i));
} catch (InterruptedException ex) {
Logger.getLogger(ProducerMascule.class.getName()).log(Level.SEVERE, null, ex);
  }
}
	}
    @Override
    public void run() {
        throw new UnsupportedOperationException("Not supported yet.");
    }

    
}
